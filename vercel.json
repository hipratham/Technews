{
    "version": 2,
    "builds": [
        {
            "src": "technews_project/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "technews_project/wsgi.py"
        }
    ],
    "crons": [
        {
            "path": "/generate-news",
            "schedule": "0 3 * * *"
        }
    ]
}
